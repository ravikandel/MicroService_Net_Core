{
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/product/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/product" }
        ]
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/order/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/order" }
        ]
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productService": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderService": {
            "Address": "http://localhost:5002/"
          }
        }
      }
    }
  }
}
